{
    "name": "ogp_functions",
    "version": "0.0.1",
    "description": "OGP生成用Cloud Functions",
    "main": "index.js",
    "config": {
        "function_name": "ogpFunctions",
        "region": "asia-northeast1",
        "gcp_project": "",
        "runtime": "nodejs12"
    },
    "scripts": {
        "clean": "rimraf \"functions/*\"",
        "lint": "tslint --project tsconfig.json",
        "tsc": "tsc",
        "cp-package": "copyfiles package.json functions/src",
        "local": "yarn build && cd functions && npx @google-cloud/functions-framework --target=$npm_package_config_function_name",
        "build": "run-s clean lint tsc cp-package",
        "deploy": "cd functions && gcloud functions deploy $npm_package_config_function_name --runtime $npm_package_config_runtime --region=$npm_package_config_region --allow-unauthenticated --max-instances=10 --memory=1024MB --trigger-http --project ${GCP_PROJECT}"
    },
    "bin": {
        "create-project": "./cli.js"
    },
    "keywords": [
        "cloud",
        "functions",
        "typescript"
    ],
    "author": "\"@flatfisher <kyoheitsuda@flatfish.jp> (https://kyohei.flatfish.jp)",
    "license": "MIT",
    "dependencies": {
        "@google-cloud/functions-framework": "^1.6.0",
        "puppeteer": "^4.0.0"
    },
    "devDependencies": {
        "@types/chai": "4.2.11",
        "@types/chai-http": "4.2.0",
        "@types/express": "4.17.6",
        "@types/mocha": "7.0.2",
        "@types/moment": "2.13.0",
        "@types/node": "13.13.12",
        "@types/puppeteer": "^3.0.0",
        "chai": "4.2.0",
        "chai-http": "4.3.0",
        "copyfiles": "2.3.0",
        "express": "4.17.1",
        "mocha": "8.0.1",
        "npm-run-all": "4.1.5",
        "rimraf": "3.0.2",
        "tslint": "6.1.2",
        "typescript": "3.9.5"
    }
}
